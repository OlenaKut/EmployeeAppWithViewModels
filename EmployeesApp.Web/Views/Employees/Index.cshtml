@model IndexVM

@{
    ViewBag.Title = "Employees List";
}

<ul>
    @foreach (var employee in Model.EmployeeItems)
    {

        //var isAdmin = employee.Email.StartsWith("admin");
        //var style = isAdmin ? "color:red;" : "";
        <li>
            <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id" style="color:@(employee.ShowAsHighlighted ? "red" : " ");">@employee.Name</a>
        </li>
    }
</ul>